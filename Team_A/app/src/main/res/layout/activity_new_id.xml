<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background"
    tools:context=".newIdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName|textWebEmailAddress"
            android:paddingLeft="20dp"
            android:singleLine="false"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:textColorHint="#A8AEB9" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtFirstName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="22.5dp"
            android:layout_weight="1"
            android:ems="8"
            android:hint="First Name"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:singleLine="false"
            android:textColor="@android:color/white"
            android:textColorHint="#A8AEB9"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edtLastName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="22.5dp"
            android:layout_weight="1"
            android:ems="8"
            android:hint="Last Name"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:singleLine="false"
            android:textColor="@android:color/white"
            android:textColorHint="#A8AEB9"
            android:textSize="18dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/edtPass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="22.5dp"
        android:ems="8"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textSize="18dp"
        android:singleLine="false"
        android:textColor="@android:color/white"
        android:textColorHint="#A8AEB9" />

    <EditText
        android:id="@+id/edtPass2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:ems="8"
        android:hint="Password Check"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:singleLine="false"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        android:textColorHint="#A8AEB9"/>

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="28dp"
        android:ems="8"
        android:hint="Phone number"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:textSize="18dp"
        android:singleLine="false"
        android:textColor="@android:color/white"
        android:textColorHint="#A8AEB9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnNewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:onClick="newIDButtonClick"
            android:text="Sign Up" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="You already have a acount?"
                android:textSize="17dp"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:onClick="loginButtonClick"
                android:layout_weight="1"
                android:text="Sign In" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>